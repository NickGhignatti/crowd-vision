{
  "name": "crowd-vision",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "setup": "node setup.js",
    "dev": "npm run setup && docker compose -f docker-compose.yml -f docker-compose.dev.yml up --watch --build",
    "start": "npm run setup && docker compose up --build -d",
    "stop": "docker compose down --remove-orphans",
    "logs": "docker compose logs -f",
    "release": "semantic-release",
    "build:api": "npm run copy:yamls",
    "copy:yamls": "shx cp server/auth-service/openapi.yaml landing-page/api/auth.yaml && shx cp server/twin-service/openapi.yaml landing-page/api/twin.yaml && shx cp server/notification-service/openapi.yaml landing-page/api/notification.yaml",
    "watch:api": "nodemon --watch server --ext yaml --exec \"npm run copy:yamls\"",
    "docs:dev": "npm run build:api && concurrently \"npm:docs:landing\" \"npm:docs:user\" \"npm:docs:devs\" \"npm:watch:api\"",
    "docs:landing": "http-server landing-page -p 8000 -c-1 --cors",
    "docs:user": "mkdocs serve -f mkdocs.user.yml -a localhost:8001",
    "docs:devs": "mkdocs serve -f mkdocs.dev.yml -a localhost:8002"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^10.0.0",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.11",
    "semantic-release": "^25.0.3",
    "shx": "^0.4.0"
  }
}
