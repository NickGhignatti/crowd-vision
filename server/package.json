{
  "name": "server",
  "version": "1.0.0",
  "description": "Express server for the project",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc && cp src/openapi.yml dist/openapi.yml",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickGhignatti/crowd-vision.git"
  },
  "author": "Ettore Farinelli, Nicol√≤ Ghignatti & Mounir Samite",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NickGhignatti/crowd-vision/issues"
  },
  "homepage": "https://github.com/NickGhignatti/crowd-vision#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mongoose": "^9.0.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "vitest": "^4.0.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "mongodb-memory-server": "^10.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@types/jest": "^29.5.12"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setup.ts"
    ]
  }
}
